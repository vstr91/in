{% block body %}
        {#{{ parent() }}#}
        {% block topo %} {% endblock %}
        {% block conteudo %}
        <div class="container-fluid" style="min-height: 100%;">
            <div class="row text-center">
                <div class="col-md-12 mt-1">
                    <h3>Central Administrativa</h3>
                </div>
            </div>
            <div class="row text-center">
                <div class="col-md-12">
                    <p>Seja bem vindo &agrave; Central Administrativa!</p>
                    <br />
                    <h4>Para acessar as configura&ccedil;&otilde;es, por favor informe os dados abaixo:</h4>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="well">
                        <form name="form-central" id="form-central" 
                              action="{{ path("fos_user_security_check") }}" method="POST">
                            <div class="form-group">
                                <label for="email">Email</label>
                                <input type="text" name="_username" id="email" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label for="senha">Senha</label>
                                <input type="password" name="_password" id="senha" class="form-control" />
                                <input type="hidden" name="_csrf_token" 
                                       value="{{ csrf_token('authenticate') }}" />
                            </div>
                            <br />
                            <input type="submit" value="Entrar" class=" btn btn-primary form-control" />
                        </form>
                    </div>
{#                    <p><a href="{{ path('fos_user_resetting_request') }}">Esqueci minha senha</a></p>#}
                </div>
            </div>
        </div>
        {% endblock %}
        {% block rodape %} {{ parent() }} {% endblock %}
{% endblock %}